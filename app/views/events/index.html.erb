<p style="color: green"><%= notice %></p>

<h1 class="title" style="text-align: center">Calendar</h1>
<div class="row">
  <div class="col-1"></div>
  <div class="card col-10">
    <h3 class="card-header" style="text-align: center">Insert Calendar Here</h3>
    <div class="card-body" style="text-align: center">
      <%= month_calendar(events: @events, attribute: :date) do |date, events| %>
        <div style="color: red; text-size: small" ><%= date %></div>
        <% events.each do |event| %>
          <div>
            <%= event.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<br/>
<div class="row">
  <div class="card col-6">
    <h3 class="card-header" style="text-align: center">Event List</h3>
    <br/>
    <table id="events" class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Event Name</th>
          <th>Event Date</th>
        </tr>
      </thead>

      <tbody>
      <% @events.each do |event| %>
        <% if event.home_id == current_home.id %>
          <tr>
            <td><%= link_to event.name, event %></td>
            <td><%= event.date %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <br/>
    <div class="Action">
      <%= link_to "New Event", new_event_path, class:"btn btn-primary" %>    
    </div>
  </div>

  <div class="card col-6">
  <h3 class="card-header" style="text-align: center">Chore List</h3>
  <br/>
  <table id="chores" class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Chore Name</th>
        <th>Assigned Roommate</th>
        <th>Chore Due Date</th>
      </tr>
    </thead>

    <tbody>
    <% @chores.each do |chore| %>
      <% if chore.home_id == current_home.id %>
        <tr>
          <td><%= link_to chore.name, chore %></td>
          <td><%= chore.assigned_to %></td>
          <td><%= chore.due_date %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
    <br/>
    <div class="Action">
      <%= link_to "New Chore", new_chore_path, class:"btn btn-primary" %>    
    </div>
  </div>
</div>



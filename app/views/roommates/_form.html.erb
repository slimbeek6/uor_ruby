<%= form_with(model: roommate) do |form| %>
  <% if roommate.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(roommate.errors.count, "error") %> prohibited this roommate from being saved:</h2>

      <ul>
        <% roommate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :user_name, class: "form-control", placeholder: "Roommate Name" %>
  </div>

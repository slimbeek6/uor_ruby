<p style="color: green"><%= notice %></p>

<h1 class="title" style="text-align: center">Budget</h1>
<div class="row">
  <div class="card col-6">
    <h3 class="card-header" style="text-align: center">Insert Charts Here</h3>
    <div class="card-body">Chart</div>
  </div>
  <div class="card col-6">
    <h3 class="card-header" style="text-align: center">Insert Charts Here</h3>
    <div class="card-body">Chart</div>
  </div>
</div>

<br/>
<div class="row">
  <div class="col-1"></div>
  <div class="card col-10">
    <h3 class="card-header" style="text-align: center">Expense List</h3>
    <br/>
    <table id="epxenses" class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Expense Name</th>
          <th>Expense Amount</th>
          <th>Due Date</th>
          <th>Expense Type</th>
          <th>Paid?</th>
        </tr>
      </thead>

      <tbody>
      <% @epxenses.limit(5).each do |epxense| %>
        <% if epxense.home_id == current_home.id %>
        <tr>
          <% if epxense.paid == false%>
            <td><%= link_to epxense.expense_name, epxense %></td>
            <td><%= epxense.expense_amount %></td>
            <td><%= epxense.exp_date %></td>
            <td><%= epxense.expenseType %></td>
            <td>Unpaid</td>
          <% else %>
            <td style="text-decoration: line-through"><%= link_to epxense.expense_name, epxense %></td>
            <td style="text-decoration: line-through"><%= epxense.expense_amount %></td>
            <td style="text-decoration: line-through"><%= epxense.exp_date %></td>
            <td style="text-decoration: line-through"><%= epxense.expenseType %></td>
            <td>Paid!</td>
          <% end %>
        </tr>
        <% end %>
      <% end %>
    </table>
    <br/>
    <div class="Action">
      <%= link_to "Full List", epxenses_table_path, class:"btn btn-secondary" %>
      <%= link_to "New Expense", new_epxense_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>